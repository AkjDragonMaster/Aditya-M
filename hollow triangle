#include <stdio.h>

int main()
{
    printf("Enter the size of the triangle: ");
    int i , j, k  = 1, size;
    scanf("%d", &size);
    for(i = 1; i <= size; ++i){
        for(j = 1; j <= i; ++j){
            printf(" ");
        }
        printf("*");
        printf("\n");
    }
    while(k < size){
        printf("* ");
        k++;
    }
    
